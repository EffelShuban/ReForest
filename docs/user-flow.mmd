graph TD
    Start((Login)) --> Role{Role?}

    subgraph Sponsor_Actions [Sponsor Flow]
        Role -- Sponsor --> S_Dash[Sponsor Dashboard]
        S_Dash --> S_Topup[Topup Credits / Payment]
        S_Dash --> S_Browse[View Forest Plots & Available Species]
        
        S_Browse --> S_Adopt[Adopt Tree]
        S_Adopt --> S_Owned[View My Adopted Trees]
        
        S_Owned --> S_Care[Pay for Tree Care]
        S_Care --> S_Logs[View Progress Logs]
    end

    subgraph Admin_Actions [Admin Management]
        Role -- Admin --> A_Dash[Admin Dashboard]
        
        A_Dash --> A_Species[Manage Tree Species]
        A_Species --> A_Species_CRUD[Create/Update/Delete Species]
        
        A_Dash --> A_Plots[Manage Forest Plots]
        A_Plots --> A_Plots_CRUD[Create/Update/Delete Plots]
        
        A_Dash --> A_Logs[Tree Maintenance]
        A_Logs --> A_New_Log[Create New Growth/Care Log]
    end

    %% Data Connections
    A_Species_CRUD -.-> S_Browse
    A_Plots_CRUD -.-> S_Browse
    A_New_Log -.-> S_Logs
    S_Adopt -.-> A_Logs

    %% Styling
    style Start fill:#f9f,stroke:#333
    style S_Adopt fill:#d4edda,stroke:#28a745
    style A_New_Log fill:#d1ecf1,stroke:#0c5460